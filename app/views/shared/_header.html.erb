<header>
  <div class="container">
    <div class="header-logo">
      <%= link_to root_path do %>
        <h1><span>M</span>ammiiiiii</h1>
        <p>( マミー )</p>
      <% end %>
    </div>
    <div class="header-nav">
      <div class="toggle-menu-button"></div>
        <ul class="header-list">
          <% if user_signed_in? %>
            <li><%= link_to "users", users_path %></li>
            <li><%= link_to "logout", logout_path, method: :delete %></li>
            <li>
              <% if current_user.name? %>
                <%= link_to current_user.name, profile_user_path(id: current_user) %>
              <% else %>
                <%= link_to "ゲスト", profile_user_path(id: current_user) %>
              <% end %>
            </li>
            <li>
              <div class="user-icon">
                <% if current_user.image? %>
                  <%= link_to profile_user_path(id: current_user) do %>
                    <%= image_tag current_user.image.url %>
                  <% end %>
                <% else %>
                  <%= link_to profile_user_path(id: current_user) do %>
                    <%= image_tag "default.png" %>
                  <% end %>
                <% end %>
              </div>
            </li>
          <% else %>
            <li><%= link_to "signup", new_user_registration_path %></li>
            <li><%= link_to "login", login_path %></li>
            <li><%= link_to "guest", "#" %></li>
          <% end %>
        </ul>
    </div>
  </div>
</header>
