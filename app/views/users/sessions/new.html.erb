<div class="container">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active"  aria-current="page">ログイン</li>
    </ol>
  </nav>
  <div class="login">
    <div class="login-title">
      <h1>Login</h1>
      <p>ーログインー</p>
    </div>
    <div class="login-form">
      <div class="login-body container-fluid">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <%= render "shared/error_messages", resource: @user %>

          <div class="field row">
            <%= f.label :email, class: "required" %></br>
            <div class="field-content row">
              <div class="field-content-left">
                <i class="fa-regular fa-envelope size"></i>
              </div>
              <div class="field-content-right">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-content-name", placeholder: "メールアドレスを入力してください" %>
              </div>
            </div>
          </div>

          <div class="field row">
            <%= f.label :password, class: "required" %></br>
            <div class="field-content row">
              <div class="field-content-left">
                <i class="fa-solid fa-unlock-keyhole size"></i>
              </div>
              <div class="field-content-right">
                <%= f.password_field :password, autocomplete: "current-password", class: "field-content-name", placeholder: "パスワードを入力してください" %>
              </div>
            </div>
            <span>※6文字以上の英数字をご入力してください</span>
          </div>

          <div class="row">
            <div class="form-btn"><%= f.submit "ログインする", class: "login-btn btn btn-primary" %></div>
          </div>
        <% end %>
      </div>
      <div class="login-footer">
        <%= render "shared/links" %>
      </div>
    </div>
  </div>
</div>
