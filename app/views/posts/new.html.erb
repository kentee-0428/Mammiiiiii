<div class="container">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "ホーム", root_path %></li>
      <li class="breadcrumb-item"><%= link_to "投稿一覧", posts_path %></li>
      <li class="breadcrumb-item active"  aria-current="page"><%= link_to "新規投稿", new_post_path %></li>
    </ol>
  </nav>
  <div class="post-new">
    <div class="post-new-title">
      <h1>New Post</h1>
      <p>新規投稿</p>
    </div>
    <div class="post-new-form">
      <div class="post-new-body container-fluid">
        <%= form_with model: @post, local: true do |f| %>
          <%= render "users/shared/error_messages", resource: @post %>

        <div class="field row">
          <%= f.label :content, class: "required" %></br>
          <%= f.text_area :content, autofocus: true, autocomplete: "content", class: "post-field-content", placeholder: "初めまして、マミーです。よろしくお願いします" %>
          <p>※500文字以内入力してください</p>
        </div>

        <div class="field row">
          <%= f.label :post_image, class: "post-new-image" %></br>
          <div class="post-new-image-content"><%= f.file_field :post_image, autocomplete: "image" %></div>
        </div>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <div class="row">
          <div class="form-btn"><%= f.submit "投稿する", class: "btn btn-primary" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
